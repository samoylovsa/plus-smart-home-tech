@namespace("ru.yandex.practicum.kafka.telemetry.event")
protocol DeviceActionProtocol {

    record DeviceActionAvro {
        string sensor_id;
        ActionTypeAvro type;
        union { null, int } value = null;
    }

    enum ActionTypeAvro {
        ACTIVATE,
        DEACTIVATE,
        INVERSE,
        SET_VALUE
    }
}